    "version": "0.2.0",
    "configurations": [
        {
            "name": "CMake Debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/iot_gateway",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb", // Linux/macOS 调试必需
            // "miDebuggerPath": "/usr/bin/gdb", // 如需要指定 gdb 路径
            "setupCommands": [
                {
                    "description": "为 gdb 启用整齐打印",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "CMake: 构建", // 确保调试前最新构建
            "logging": { // 可选：调试日志
                "moduleLoad": false,
                "trace": false
            }
        },
    ]
}